<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.menu_test.Drink" >

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="240dp"
            android:layout_height="200dp"
            android:src="@drawable/drink" />

        <RadioGroup
            android:id="@+id/radio_drink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp" >

            <RadioButton
                android:id="@+id/margarita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Margarita" />

            <RadioButton
                android:id="@+id/coke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coco Coke" />

            <RadioButton
                android:id="@+id/spirit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spirit" />
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/submit_drink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="230dp"
        android:background="@drawable/menu_submit_dialog" />

</FrameLayout>
